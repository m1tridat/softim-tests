@model IEnumerable<WebApplication.Dtos.VisitsByMoodDto>
@{
    ViewBag.Title = "Statistics by mood";
}

<div class="filter-form">
    <div class="row">
        @using (Html.BeginForm("StatisticsByMood", "Home", FormMethod.Post, new {@class = "form-inline"}))
        {
            <div class="form-group">
                <label for="shopId">Select shop:</label>
                @Html.DropDownList("shopId", ViewBag.Shops as SelectList, "", new {@class = "form-control"})
            </div>
            <div class="form-group">
                @Html.TextBox("date", null, new {@class = "form-control datepicker"})
            </div>
            <div class="form-group">
                <input type="submit" value="Filter" class="btn btn-default"/>
            </div>
        }
    </div>
</div>

<div class="row">
    <h3>Statistics by mood</h3>
    <table class="table table-striped">
        <thead>
        <tr>
            <th scope="col">Shop</th>
            <th scope="col">Address</th>
            <th scope="col">Date</th>
            <th scope="col">Satisfied</th>
            <th scope="col">Sad</th>
            <th scope="col">Andgry</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var v in Model)
        {
            <tr>
                <th scope="row">@v.ShopName</th>
                <td>@v.Address</td>
                <td>@v.Date.ToShortDateString()</td>
                <td>@v.Satisfied</td>
                <td>@v.Sad</td>
                <td>@v.Andgry</td>
            </tr>
        }
        </tbody>
    </table>
</div>